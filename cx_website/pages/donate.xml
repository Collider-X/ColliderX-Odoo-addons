<odoo>
    <template id="cx_website.donate" name="Donation Page">
			<t name="Donation Page" priority="69" t-name="cx_website.donate">
				<t t-set="head">
					<script>
						$(document).ready(function() {
						    $("#amount").on("input", function() {
								        // allow numbers, a comma or a dot
												        $(this).val($(this).val().replace(/[^0-9,\.]+/, ''));
																    });
																		});
					</script>
				</t>
          <t t-call="website.layout">
            <div id="wrap" class="oe_structure oe_empty">
              <section class="s_title bg-black mb0">
                <div class="container">
                  <div class="row">
                    <div class="col-md-12 mb16">
                      <h1 class="text-center">
                        <font style="font-size: 62px;">$ 2,000,100</font>
                        <br/>
                      </h1>
                      <h3 class="text-center text-muted">Pledged so far</h3>
                      <h3 class="text-center text-muted">Mar 31, 2017<br/></h3>
                    </div>
                  </div>
                </div>
              </section>
              <section class="jumbotron s_big_message bg-white" style="">
                <div class="container">
                  <div class="row">
                    <div class="col-md-offset-1 mb0 col-md-10">
                      <h1>Make a Pledge to ColliderX<br/></h1>
                      <p>
                        <br/>
                      </p>
                      <div class="o_container">
                        <div class="media_iframe_video" data-oe-expression="//www.youtube.com/embed/naeuTrslXhE?autoplay=0">
                          <div class="css_editable_mode_display" data-original-title="" title="">&amp;nbsp;</div>
                          <div class="media_iframe_video_size">&amp;nbsp;</div>
                          <iframe src="//www.youtube.com/embed/naeuTrslXhE?autoplay=0" frameborder="0"/>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </section>
              <section class="s_text_block mt32 mb32">
                <div class="container">
                  <h2 class="text-center">How Much Would you like to contribute?</h2>
									<form role="form" class="cx-centre" action='/cx/donate' method='POST'>
                    <div class="col-md-4 col-md-offset-4">
                      <div class="form-group">
                        <div class="input-group">
                          <input name ="amount" class="form-control" type="text"/>
                          <span class="input-group-btn">
                            <select name="currency" class="btn">
                              <option>$USD</option>
                              <option>$CAD</option>
                              <option>BTC</option>
                              <option>LTC</option>
                              <option>ETH</option>
                            </select>
                          </span>
                        </div>
                      </div>
                      <div align="center">
												<input type="submit" class="btn btn-danger" value="Donate"/> <!--data-original-title="" title="">Donate</a>-->
                      </div>
                      <div class="checkbox">
                        <label>
                          <input value="permission_to_list_as_donor" type="checkbox"/>
                          <h6>OK to have your name on the donor's list?</h6>
                        </label>
                        <label>
                          <input value="permission_to_contact" type="checkbox"/>
                          <h6>OK to be contacted later for updates about ColliderX?</h6>
                        </label>
                      </div>
                    </div>
                  </form>
                </div>
              </section>
            </div>
          </t>
        </t>
    </template>
    <data>
        <record id="menu_donate" model="website.menu">
            <field name="name">Donate</field>
            <field name="url">/donate</field>
            <field name="parent_id" ref="website.main_menu"/>
            <field name="sequence" type="int">70</field>
            <field name="website_id" ref="website.default_website"/>
        </record>
        <record id="donate_page" model="website.page">
            <field name="url">/donate</field>
            <field name="website_published">True</field>
            <field name="view_id" ref="cx_website.donate" />
        </record>


    </data>
</odoo>

